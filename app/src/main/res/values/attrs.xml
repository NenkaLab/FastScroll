<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Scroll">
        <attr name="scrollRotation">
            <enum name="start" value="90" />
            <enum name="end" value="-90" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FastScroll">
        <attr name="scroll" format="reference" />
        <attr name="scrollThumb" format="reference" />
        <attr name="scrollThumbTint" format="color" />
        <attr name="scrollThumbTintMode" format="enum">
            <enum name="clear" value="0" />
            <enum name="src" value="1" />
            <enum name="dst" value="2" />
            <enum name="src_over" value="3" />
            <enum name="dst_over" value="4" />
            <enum name="src_in" value="5" />
            <enum name="dst_in" value="6" />
            <enum name="src_out" value="7" />
            <enum name="dst_out" value="8" />
            <enum name="src_atop" value="9" />
            <enum name="dst_atop" value="10" />
            <enum name="xor" value="11" />
            <enum name="add" value="12" />
            <enum name="multiply" value="13" />
            <enum name="screen" value="14" />
            <enum name="overlay" value="15" />
            <enum name="darken" value="16" />
            <enum name="lighten" value="17" />
        </attr>
        <attr name="scrollThumbColor" format="color" />
        <attr name="autoHide" format="boolean" />

        <attr name="scrollThumbRotation">
            <enum name="start" value="90" />
            <enum name="end" value="-90" />
        </attr>
    </declare-styleable>
</resources>